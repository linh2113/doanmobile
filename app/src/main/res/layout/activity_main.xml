<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393939">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f57f17"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnRouter"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_chevron_left_24" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="247dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="60dp"
                android:text="Tài khoản"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>


        <com.example.myapplication.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUploadAvatar"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/testshape"
            android:layout_height="wrap_content"
            android:text="Đổi ảnh đại diện" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tên người dùng:"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/currentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/newName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:hint="Tên mới"
                android:inputType="text"
                android:textColor="#555"
                android:textColorHint="#555" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:background="@drawable/testshape"
                android:layout_marginTop="16dp"
                android:text="Đổi tên người dùng" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Đổi mật khẩu:"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/currentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnChangeName"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_border"
                android:hint="Mật khẩu cũ"
                android:inputType="textPassword"
                android:textColor="#555"
                android:textColorHighlight="#555"
                android:textColorHint="#555" />

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:layout_below="@id/currentPassword"
                android:layout_marginBottom="16dp"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:textColor="#555"
                android:textColorHighlight="#555"
                android:textColorHint="#555" />
            <EditText
                android:id="@+id/confirmNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:layout_below="@id/currentPassword"
                android:layout_marginBottom="16dp"
                android:hint="Nhập lại mật khẩu mới"
                android:inputType="textPassword"
                android:textColor="#555"
                android:textColorHighlight="#555"
                android:textColorHint="#555" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/newPassword"
                android:textColor="#fff"
                android:background="@drawable/testshape"
                android:layout_centerHorizontal="true"
                android:text="Đổi mật khẩu" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
